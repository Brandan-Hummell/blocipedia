<h1>Wiki Directory</h1>

   <% if current_user %>
   <div class="col-md-4 pull-right">
     <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
   </div>
  <% end %> 

 <div class="row">
   
   <!-- Private Wikis listed out -->
  <% if current_user.admin? || current_user.premium? %>
   <div class="col-md-8">
   <h3>Private Wikis</h3>
     <% @wikis.each do |wiki| %>
      <% if wiki.private == true %>
       <div class="media">
         <div class="media-body">
           <h4 class="media-heading">
             <%= link_to wiki.title, wiki %>
           </h4>
         </div>
       </div>
      <% end %> 
     <% end %>
   </div>
  <% end %>
   <!-- Public Wikis listed out -->
   <div class="col-md-8">
   <h3>Public Wikis</h3>
     <% @wikis.each do |wiki| %>
      <% if wiki.private == false %>
       <div class="media">
         <div class="media-body">
           <h4 class="media-heading">
             <%= link_to wiki.title, wiki %>
           </h4>
         </div>
       </div>
      <% end %> 
   <% end %>
   </div>
</div>